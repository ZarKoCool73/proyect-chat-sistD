<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Login Chat Sistemas Distribuidos</title>
    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <!--FONT AWESOME-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <!--CUSTOM CSS-->
    <!-- <link rel="stylesheet" href="./src/public/main.css"> -->
    <%- include ('./partials/head') %>
  </head>
  <body>

    <nav class="navbar navbar-light bg-warning">
      <a class="navbar-brand mx-auto" href="/">Chat Sistemas Distribuidos</a>
    </nav>

    <!--CONTENEDOR DE LOS NOMBRES DE USUARIOS-->
    <div class="card col-md-4 mt-5 mx-auto"id="nickWrap">
      <div class="card-header">
        <h3>Ingrese Nombre de Usuario: </h3>
      </div>
      <p id="nickError"></p>
      <div class="card-body">
        <form id="nickForm">
          <input type="text" id="nickname" class="form-control">
          <br>
          <label>Seleccione un grupo de chat:</label>
          <select id="grupoChat">
            <option value="" disabled selected>Seleccionar grupo</option>
            <option value="1">Facultad de Ciencias Humanas</option>
            <option value="2">Facultad de Ingeniería y Arquitectura</option>
            <option value="3">Facultad de Ciencias de Gestión</option>
          </select>
          <button type="submit" class="btn btn-warning mt-2" id="btnSelectRoom" disabled>
          <i class="fas fa-location-arrow"></i>Enviar</button>
        </form>
      </div>
    </div>


    <!--CONTENIDO DE TODO EL CHAT QUE SE ESTA HACIENDO-->
    <div class="container" id=contentWrap>
      <div class="row mt-2">
        <div class="col-md-6 offset-md-1">
          <div class="card">
            <div class="card-header">
              <g4><i class="fas fa-comments"></i>Sala: <b id="nombreSala"></b></g4>
              
            </div>

            <div id="chat" class="card-body w-100"></div>
            <form id ="message-form" class="card-footer">
              <div class="input-group d-flex justify-content-center">
                <div id="content-user"><input type="text" id="messageUser" 
                 class="form-control" disabled></div>
                <input type="text" id="message" class="form-control">
                  <button type="submit" class="btn btn-warning">
                  <i class="fas fa-location-arrow"></i>Enviar</button>
              </div>
              
            </form>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card">
            <div class="card-header">
              <h3>Usuarios</h3>
            </div>
            <div class="card-body">
              <div id="usernames"></div>
            </div>
          
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <script src="/socket.io/socket.io.js" charset="utf-8"></script>
    <script src="/js/main.js" charset="utf-8"></script>
  </body>
</html>
